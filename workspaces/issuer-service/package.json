{
  "name": "@persona-hq/issuer-service",
  "version": "1.0.0",
  "description": "API-to-VC Bridge Service for issuing Verifiable Credentials from third-party API integrations",
  "author": "Persona Team",
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typecheck": "tsc --noEmit",
    "cdk": "cdk",
    "cdk:deploy": "cdk deploy --all",
    "cdk:destroy": "cdk destroy --all",
    "cdk:diff": "cdk diff",
    "cdk:synth": "cdk synth",
    "demo:api-to-vc": "ts-node src/demo/api-to-vc-bridge-demo.ts",
    "test:oauth": "ts-node src/demo/test-github-oauth.ts"
  },
  "dependencies": {
    "@aws-sdk/client-kms": "^3.478.0",
    "@aws-sdk/client-secrets-manager": "^3.478.0",
    "@aws-sdk/client-ssm": "^3.478.0",
    "@nestjs/cache-manager": "^2.1.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/throttler": "^5.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@octokit/app": "^14.0.2",
    "@octokit/rest": "^20.0.2",
    "@sendgrid/mail": "^8.1.5",
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/passport-github2": "^1.2.9",
    "@types/passport-jwt": "^3.0.13",
    "@types/uuid": "^9.0.7",
    "@veramo/core": "^4.3.0",
    "@veramo/credential-w3c": "^4.3.0",
    "@veramo/data-store": "^4.3.0",
    "@veramo/did-manager": "^4.3.0",
    "@veramo/did-provider-ethr": "^4.3.0",
